{
  "name": "career-lens-microservices",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:user && npm run build:auth",
    "build:user": "cd apps/user-service && npm run build",
    "build:auth": "cd apps/auth-service && npm run build",
    "start": "concurrently \"npm run start:user\" \"npm run start:auth\"",
    "start:user": "cd apps/user-service && npm run start",
    "start:auth": "cd apps/auth-service && npm run start",
    "start:dev": "concurrently \"npm run start:dev:user\" \"npm run start:dev:auth\"",
    "start:dev:user": "cd apps/user-service && npm run start:dev",
    "start:dev:auth": "cd apps/auth-service && npm run start:dev",
    "docker:up": "docker-compose up -d",
    "docker:up:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker-compose down",
    "docker:down:dev": "docker-compose -f docker-compose.dev.yml down",
    "install:all": "npm install && npm run install:user && npm run install:auth",
    "install:user": "cd apps/user-service && npm install",
    "install:auth": "cd apps/auth-service && npm install",
    "format": "prettier --write \"apps/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"apps/**/*.ts\" --fix",
    "test": "npm run test:user && npm run test:auth",
    "test:user": "cd apps/user-service && npm run test",
    "test:auth": "cd apps/auth-service && npm run test"
  },
  "keywords": [
    "microservices",
    "nestjs",
    "ddd",
    "career-lens"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@grpc/grpc-js": "^1.13.4",
    "@grpc/proto-loader": "^0.8.0",
    "@nestjs/microservices": "^11.1.6",
    "concurrently": "^8.2.2",
    "ts-proto": "^2.7.7"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  }
}
