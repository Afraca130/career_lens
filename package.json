{
  "name": "career-lens-microservices",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "nest build user-service && nest build api-gateway",
    "build:user": "nest build user-service",
    "build:api-gateway": "nest build api-gateway",
    "start": "concurrently \"npm run start:user\" \"npm run start:api-gateway\"",
    "start:user": "cd apps/user-service && npm run start",
    "start:api-gateway": "cd apps/api-gateway && npm run start",
    "start:dev": "concurrently \"npm run start:dev:user\" \"npm run start:dev:api-gateway\"",
    "start:dev:user": "cd apps/user-service && npm run start:dev",
    "start:dev:api-gateway": "cd apps/api-gateway && npm run start:dev",
    "docker:up": "docker-compose up -d",
    "docker:up:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker-compose down",
    "docker:down:dev": "docker-compose -f docker-compose.dev.yml down",
    "install:all": "npm install && npm run install:user && npm run install:api-gateway",
    "install:user": "cd apps/user-service && npm install",
    "install:api-gateway": "cd apps/api-gateway && npm install",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"apps/**/*.ts\" \"libs/**/*.ts\" --fix",
    "test": "npm run test:user && npm run test:api-gateway",
    "test:user": "cd apps/user-service && npm run test",
    "test:api-gateway": "cd apps/api-gateway && npm run test"
  },
  "keywords": [
    "microservices",
    "nestjs",
    "ddd",
    "career-lens"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@grpc/grpc-js": "^1.13.4",
    "@grpc/proto-loader": "^0.8.0",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/microservices": "^11.1.6",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "concurrently": "^8.2.2",
    "express": "^4.18.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "ts-proto": "^2.7.7",
    "typeorm": "^0.3.26"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@types/express": "^4.17.21",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "ts-loader": "^9.4.4",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4"
  }
}
